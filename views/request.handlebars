<section class="pure-u-1 pure-u-lg-1-2 tile request">
    <div class="tile-header">
        <h2>Find A Sandwich Buddy!</h2>
    </div>
    <div class="tile-body">
        <form class="pure-form pure-form-stacked" action="request" method="POST">
            <fieldset>
                <legend>Sandwich Request Details</legend>
                <div class="pure-g">
                    <div class="pure-u-1 pure-u-md-1-3">
                        <label for="req-num">Number Of Sanwiches:</label>
                        <input class="pure-u-23-24" id="req-num" name="req-num" type="number" required min="1" max="128" value="1" />
                    </div>
                    <div class="pure-u-1 pure-u-md-1-3">
                        <label for="req-dist">Max Distance From You (km):</label>
                        <input class="pure-u-23-24" id="req-dist" name="req-dist" type="number" required min="1" max="300" value="5" />
                    </div>
                    <div class="pure-u-1 pure-u-md-1-3">
                        <label for="req-end">End Request on:</label>
                        <input class="pure-u-23-24 c-datepicker-input" id="req-end" name="req-end" type="datetime" required readonly />
                    </div>
                    <div class="pure-u-1">
                        <label for="req-loc">Location:</label>
                        <input class="pure-u-5-6" id="req-loc" name="req-loc" type="text" required value="Australia" />
                        <button type="button" class="pure-button getloc"><i class="material-icons">my_location</i></button>
                    </div>
                </div>
            </fieldset>
        </form>
        <div id="req_getLocMap"></div>
    </div>
</section>